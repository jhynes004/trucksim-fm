{
  "expo": {
    "name": "TruckSim FM",
    "slug": "trucksim-fm",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "trucksimfm",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "newArchEnabled": false,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "fm.trucksim.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Access camera to share photos in chat",
        "NSMicrophoneUsageDescription": "Access microphone for voice messages",
        "NSPhotoLibraryUsageDescription": "Access photos to share in chat",
        "UIBackgroundModes": ["audio"]
      }
    },
    "android": {
      "package": "fm.trucksim.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_MEDIA_PLAYBACK",
        "WAKE_LOCK"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            { "scheme": "https" }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "./plugins/withTrackPlayerPatch.js",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000000"
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "usesAudioBackgroundMode": true
          },
          "android": {
            "usesCleartextTraffic": true
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "d2d690a7-6eb2-4498-8512-f339f55e2ded"
      }
    },
    "updates": {
      "url": "https://u.expo.dev/d2d690a7-6eb2-4498-8512-f339f55e2ded"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}
